model Notice_Team {
  id        String @id @default(uuid())
  notice_id String
  team_id   String

  Notice Notice @relation(fields: [notice_id], references: [id], onDelete: Cascade)
  Team   Team   @relation(fields: [team_id], references: [id], onDelete: Cascade)

  @@unique([notice_id, team_id])
}

enum Role {
  Employee
  HR
  VP
  CEO
}
