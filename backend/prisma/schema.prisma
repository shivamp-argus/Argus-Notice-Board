model Notices_Group {
  notice_id Int
  group_id  Int

  Notices Notices @relation(fields: [notice_id], references: [notice_id])
  Group   Group   @relation(fields: [group_id], references: [group_id])

  @@unique([notice_id, group_id])
}

enum Role {
  Employee
  HR
  VP
  CEO
}
